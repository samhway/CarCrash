@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row m-4">
        <div class="container">
            <h1 style="color: #313715;">UTAH AUTO INCIDENT PORTAL</h1>
            <img width="25%" src="~/img/carcrash.png" />
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <h3>Welcome to the Utah Auto Incident Portal</h3><br />
            <h6 class="text-left">This site is designed to provide insight to automobile accident information in the state of Utah.
            It is built using data from 2016, 2017, and 2019.</h6>
            <p class="text-left">Select a link below to get started: </p>
            <ul class="list-group border-dark">
                <a class="text-primary" asp-controller="Home" asp-action="Data">
                <li class="list-group-item">
                    View all data
                </li>
                </a>
                <a class="text-primary" asp-controller="Home" asp-action="Summary">
                <li class="list-group-item">
                    View data summaries
                </li>
                </a>
                <a class="text-primary" asp-controller="Home" asp-action="Prediction">
                <li class="list-group-item">
                    View data predictions
                </li>
                </a>
            </ul>
        </div>
        <div class="col">
            <div class="container">
                <img src="~/img/crash.jpg" width="80%" />
            </div>
        </div>
    </div>
</div>
