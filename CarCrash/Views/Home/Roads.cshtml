@{
    ViewData["Title"] = "Roads";
}
@model Road

<h1>Roads Form</h1>
<form>
    <div class="form-group">
        <input type="hidden" asp-for="@Model.ROAD_ID" />
        <label asp-for="@Model.MAIN_ROAD_NAME">Main Road Name:</label>
        <input asp-for="@Model.MAIN_ROAD_NAME" /><br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>