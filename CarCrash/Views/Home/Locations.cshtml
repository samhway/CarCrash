@{
    ViewData["Title"] = "Locations";
}
@model Location

<h1>Locations Form</h1>
<form>
    <div class="form-group">
        <input type="hidden" asp-for="@Model.LOCATION_ID" />
        <label asp-for="@Model.CITY">City:</label>
        <input asp-for="@Model.CITY" /><br />
        <label asp-for="@Model.COUNTY_NAME">County name:</label>
        <input asp-for="@Model.COUNTY_NAME" /><br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>