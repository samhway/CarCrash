@{
    ViewData["Title"] = "Admin - Delete";
}

@model Crash

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the record for crash Id: @Model.CRASH_ID?</h3>

<form method="post" asp-controller="Admin" asp-action="Delete">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Home" asp-action="Data" class="btn">Cancel</a>

    <input type="hidden" asp-for="CRASH_ID" asp-route-crashid="@Model.CRASH_ID" />
</form>