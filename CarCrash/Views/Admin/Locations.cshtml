@{
    ViewData["Title"] = "Admin - Locations";
    Layout = "_AdminLayout";
}
@model Location

<h1>Admin: Locations</h1>
<div class="container border rounded shadow mt-3">
    <h3 class="mt-3">Add new location</h3>
    <form method="post" asp-controller="Admin" asp-action="Locations">
        <div class="form-group d-inline-block" asp-validation-summary="All">
            <input type="hidden" asp-for="LOCATION_ID" value="@(ViewBag.max + 1)" />
            <div class="row">
                <div class="col-4">
                    <label asp-for="CITY" class="d-inline-block">City: </label>
                </div>
                <div class="col-8">
                    <input asp-for="CITY" />
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <label asp-for="COUNTY_NAME" class="d-inline-block">County: </label>
                </div>
                <div class="col-8">
                    <input asp-for="COUNTY_NAME" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <button class="btn btn-success" action="submit">Submit</button>
        </div>
    </form>
</div>


