@{
    ViewData["Title"] = "Admin - Roads";
    Layout = "_AdminLayout";
}
@model Road

<h1>Admin: Roads</h1>
<div class="container border  rounded shadow mt-3">
    <h3 class="mt-3">Add new road</h3>
    <form method="post" asp-controller="Admin" asp-action="Roads">
        <div class="form-group">
            <input type="hidden" asp-for="ROAD_ID" value="@(ViewBag.max + 1)" />


            <div class="row">
                <div class="col-4">
                    <label asp-for="MAIN_ROAD_NAME" class="d-inline-block">Main Road Name: </label>
                </div>
                <div class="col-8">
                    <input asp-for="MAIN_ROAD_NAME" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-success" action="submit">Submit</button>
        </div>
    </form>
</div> 